#!/bin/bash
$dest=/etc/update-motd.d
cp *-* $dest/
cp misc.py $dest/

chmod -x $dest/*

chmod +x $dest00/-header
chmod +x $dest05/-logo
chmod +x $dest10/-uptime
chmod +x $dest18/-mounts
chmod +x $dest19/-temps
# chmod +x $dest20-services
# chmod +x $dest22-pm2
chmod +x $dest90/-updates-available
chmod +x $dest91/-release-upgrade
chmod +x $dest92/-unattended-upgrades
chmod +x $dest95/-hwe-eol
chmod +x $dest98/-fsck-at-reboot
chmod +x $dest98/-reboot-required